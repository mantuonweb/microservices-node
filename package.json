{
  "name": "microservices",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "docker:start": "docker compose -f docker-compose-exposed-ports.yml up -d",
    "docker:stop": "docker compose -f docker-compose-exposed-ports.yml down",
    "docker:build-customer": "docker-compose -f docker-compose-exposed-ports.yml up -d --build customer-service",
    "docker:build-notification": "docker-compose -f docker-compose-exposed-ports.yml up -d --build notification-service",
    "docker:build-product": "docker-compose -f docker-compose-exposed-ports.yml up -d --build product-service",
    "docker:build-inventory": "docker-compose -f docker-compose-exposed-ports.yml up -d --build inventory-service",
    "docker:build-order": "docker-compose -f docker-compose-exposed-ports.yml up -d --build order-service",
    "docker:build-payment": "docker-compose -f docker-compose-exposed-ports.yml up -d --build payment-service",
    "docker:build-api-gateway": "docker-compose -f docker-compose-exposed-ports.yml up -d --build api-gateway",
    "docker:build-auth": "docker-compose -f docker-compose-exposed-ports.yml up -d --build auth-service",
    "docker:build-query": "docker-compose -f docker-compose-exposed-ports.yml up -d --build query-manager",
    "docker:build-config": "docker-compose -f docker-compose-exposed-ports.yml up -d --build config-service",
    "docker:start-build": "docker compose -f docker-compose-exposed-ports.yml up -d --build",
    "install-all": "npm install && npm run install-services",
    "install-services": "npm-run-all --sequential install:*",
    "install:product": "cd product-service && npm install",
    "install:customer": "cd customer-service && npm install",
    "install:inventory": "cd inventory-service && npm install",
    "install:order": "cd order-service && npm install",
    "install:payment": "cd payment-service && npm install",
    "install:api-gateway": "cd api-gateway && npm install",
    "install:auth": "cd auth-service && npm install",
    "install:config": "cd config-service && npm install",
    "install:query": "cd query-manager && npm install",
    "install:notification": "cd notification-service && npm install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "install-all": "^1.1.0",
    "jest": "^29.7.0",
    "mongoose": "^8.13.0",
    "supertest": "^7.1.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
